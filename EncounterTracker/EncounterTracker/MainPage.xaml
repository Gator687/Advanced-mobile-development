<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EncounterTracker"
             x:Class="EncounterTracker.MainPage">

    <StackLayout Padding="20">
        <Label Text="Encounter Tracker" FontSize="24" HorizontalOptions="CenterAndExpand" Margin="0,0,0,20"/>
        <Entry x:Name="NameEntry" Placeholder="Name" Margin="0,0,0,10"/>
        <DatePicker x:Name="DatePicker" Margin="0,0,0,10"/>
        <Entry x:Name="LocationEntry" Placeholder="Location" Margin="0,0,0,10"/>
        <Button Text="Add Encounter" Clicked="OnAddEncounterClicked" Margin="0,0,0,10"/>
        <ScrollView>
            <StackLayout x:Name="EncounterList"/>
        </ScrollView>
    </StackLayout>
</ContentPage>
