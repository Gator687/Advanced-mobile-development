<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FontSizeApp.SettingsPage"
             Title="SettingsPage">
    <StackLayout>
        <Label Text="Font Size Settings" FontSize="Title" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
        <Slider x:Name="FontSizeSlider" Minimum="10" Maximum="30" BindingContext="{x:Reference MainViewModel}" Value="{Binding FontSize}" WidthRequest="300" HorizontalOptions="CenterAndExpand" ValueChanged="OnSliderChange"/>
    </StackLayout>
</ContentPage>