<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PitchCounter.Views.Data"
             xmlns:res="clr-namespace:PitchCounter.Resources"
             Title="Data">
    <VerticalStackLayout BackgroundColor="{StaticResource PirateBlack}">
        <Frame BackgroundColor="{StaticResource PirateYellow}" Padding="24" Margin="0,0,0,24" CornerRadius="0">
            <Label Text="{x:Static res:Strings.Title}" HorizontalOptions="Center"
                   TextColor="{StaticResource PirateBlack}"
                   FontSize="Large"/>
        </Frame>

        <Picker x:Name="PlayerPicker"
                BackgroundColor="{StaticResource PirateYellow}"
                Title="Pick a Pitcher"
                FontSize="Large"
                Margin="5,0,0,5"
                SelectedIndexChanged="ShowThePlayer"/>
    </VerticalStackLayout>
</ContentPage>